rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // kalite-kayitlari koleksiyonu için kurallar
    match /kalite-kayitlari/{document=**} {
      // Herkes okuyabilir (authenticated kullanıcılar)
      allow read: if request.auth != null;
      
      // Sadece admin yazabilir (create, update, delete)
      allow write: if request.auth != null && request.auth.token.email == 'fatihgural80@gmail.com';
    }
  }
}
